<%= @rider.full_name  %>

<%= render 'picture', :rider => @rider %>

<br><%= link_to "Donate to #{@rider.full_name}'s Campaign!", new_persistent_rider_profile_donation_path(@rider), class: "btn btn-info btn-lg" %>


<% @donations.each do |d| %>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= d.user.full_name %></h3>
	  </div>
	  <div class="panel-body">
	    <%= d.amount %>
			<br>public viewable is <%= d.visible_to_public %>	
			<br><%= d.note_to_rider %>		
	  </div>
	</div>
<% end %>


<% if current_user == @rider.user %>

	show me the control panel

<% end %>


