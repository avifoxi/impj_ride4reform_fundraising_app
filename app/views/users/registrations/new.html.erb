<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

 	<%= f.input :title, collection: User::TITLES %>  
   
  <%= f.input :first_name %>
  <%= f.input :last_name %>


  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: 'Your Email Address' %>
    <%= f.input :password, required: true, hint: 'No special characters. At least 8 characters long.' %>
    <%= f.input :password_confirmation, required: true%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
