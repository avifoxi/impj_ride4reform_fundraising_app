<%= simple_form_for @user  do |f| %>
  
  <%= f.input :title, collection: User::TITLES %>  
   
  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.input :password, hint: 'No special characters. At least 8 characters long.' %>
  <%= f.input :password_confirmation %>
  <%= f.input :email, placeholder: 'Your Email Address' %>
  <%= f.button :submit %>
<% end %>

