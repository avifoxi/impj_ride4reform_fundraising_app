<%= simple_form_for [:admin, @admin]  do |f| %>
  <%= f.input :username, label: 'Choose Admin user name' %>
  <%= f.input :password, hint: 'No special characters. At least 8 characters long.' %>
  <%= f.input :password_confirmation, required: true %>
  <%= f.input :email, placeholder: 'admin@domain.com' %>
  <%= f.input :email_confirmation, required: true %>

  <%= f.button :submit %>
<% end %>

